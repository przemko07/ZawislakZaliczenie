<Window x:Class="WpfFrontend.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ext="clr-namespace:WpfFrontend.Extensions"
        xmlns:local="clr-namespace:WpfFrontend"
        xmlns:view="clr-namespace:WpfFrontend.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <view:MatrixV Matrix="{Binding Matrix}"
                      Editable="{Binding Editable}"
                      CopyByDiagonal="{Binding CopyByDiagonal}"/>

        <view:GraphV Grid.Row="1"
                     Graph="{Binding Graph}"
                     GraphPath="{Binding GraphPath}"
                     NodeSize="{Binding NodeSize}"
                     NodesMargin="{Binding NodesMargin}"
                     NamesMargin="{Binding NamesMargin}"
                     ShowGraphEdges="{Binding ShowGraphEdges}">
            <ext:DataPiping.DataPipes>
                <ext:DataPipeCollection>
                    <ext:DataPipe Source="{Binding Path=ActualWidth, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type view:GraphV}}}"
                                  Target="{Binding Path=WindowWidth, Mode=OneWayToSource}"/>
                    <ext:DataPipe Source="{Binding Path=ActualHeight, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type view:GraphV}}}"
                                  Target="{Binding Path=WindowHeight, Mode=OneWayToSource}"/>
                </ext:DataPipeCollection>
            </ext:DataPiping.DataPipes>
        </view:GraphV>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Column="0" Grid.Row="0" Text="{Binding NodeSize}" Margin="5"/>
            <Slider Grid.Column="1" Grid.Row="0" Minimum="1" Maximum="700" Value="{Binding NodeSize, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>

            <TextBlock Grid.Column="0" Grid.Row="1" Text="{Binding NodesMargin}" Margin="5"/>
            <Slider Grid.Column="1" Grid.Row="1" Minimum="1" Maximum="700" Value="{Binding NodesMargin, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>

            <TextBlock Grid.Column="0" Grid.Row="2" Text="{Binding NamesMargin}" Margin="5"/>
            <Slider Grid.Column="1" Grid.Row="2" Minimum="1" Maximum="700" Value="{Binding NamesMargin, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>
            
            <TextBlock Grid.Column="0" Grid.Row="3" Text="{Binding Combine}" Margin="5"/>
            <Slider Grid.Column="1" Grid.Row="3" Minimum="1" Maximum="700" Value="{Binding Combine, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>

            <CheckBox Grid.Row="4" Content="Show graph edges" IsChecked="{Binding ShowGraphEdges, UpdateSourceTrigger=PropertyChanged}"/>
            
            <CheckBox Grid.Row="5" Content="Matrix editable" IsChecked="{Binding Editable, UpdateSourceTrigger=PropertyChanged}"/>
            
            <CheckBox Grid.Row="6" Content="Matrix copy diagonal" IsChecked="{Binding CopyByDiagonal, UpdateSourceTrigger=PropertyChanged}"/>
        </Grid>
    </Grid>
</Window>
